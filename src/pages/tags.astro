---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts', ({ data }) => {
  return data.draft !== true;
});

// Collect all tags and count posts per tag
const tagCounts = new Map<string, number>();

posts.forEach(post => {
  if (post.data.tags) {
    post.data.tags.forEach(tag => {
      tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
    });
  }
});

// Sort tags alphabetically
const sortedTags = Array.from(tagCounts.entries()).sort((a, b) => a[0].localeCompare(b[0]));
---

<BaseLayout title="Tags - Mohamadou Bella Bah">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold mb-8">Tags</h1>
    
    {sortedTags.length > 0 ? (
      <div class="space-y-3">
        {sortedTags.map(([tag, count]) => (
          <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-b-0">
            <a 
              href={`/tags/${tag}`} 
              class="text-lg hover:text-gray-600 transition-colors"
            >
              {tag}
            </a>
            <span class="text-sm text-gray-500">
              {count} {count === 1 ? 'post' : 'posts'}
            </span>
          </div>
        ))}
      </div>
    ) : (
      <p class="text-gray-600">No tags found.</p>
    )}
  </div>
</BaseLayout>