---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts', ({ data }) => {
  return data.draft !== true;
});

// Collect all tags and count posts per tag
const tagCounts = new Map<string, number>();

posts.forEach(post => {
  if (post.data.tags) {
    post.data.tags.forEach(tag => {
      tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
    });
  }
});

// Sort tags alphabetically
const sortedTags = Array.from(tagCounts.entries()).sort((a, b) => a[0].localeCompare(b[0]));

// Group tags by letter
const groupedTags = sortedTags.reduce((acc, [tag, count]) => {
  const letter = tag[0].toUpperCase();
  if (!acc[letter]) acc[letter] = [];
  acc[letter].push({ tag, count });
  return acc;
}, {} as Record<string, { tag: string; count: number }[]>);

const sortedLetters = Object.entries(groupedTags).sort(([a], [b]) => a.localeCompare(b));
---

<BaseLayout title="Tags - Mohamadou Bella Bah">
  <div class="mb-12 pt-8">
    <h1 class="text-4xl md:text-5xl font-serif font-medium mb-6 text-gray-900 tracking-tight">Index</h1>
    <p class="text-xl font-serif text-gray-500 max-w-lg leading-relaxed">
      A collection of topics and themes explored across the site.
    </p>
  </div>
    
  {sortedTags.length > 0 ? (
    <div class="columns-1 md:columns-2 lg:columns-3 gap-12 space-y-12">
      {sortedLetters.map(([letter, tags]) => (
        <div class="break-inside-avoid-column mb-12">
          <h2 class="text-2xl font-serif font-medium text-gray-300 mb-6 border-b border-gray-100 pb-2">
            {letter}
          </h2>
          <div class="flex flex-wrap gap-2">
            {tags.map(({ tag, count }) => (
              <a 
                href={`/tags/${tag}`} 
                class="group flex items-center gap-2 bg-gray-50 hover:bg-indigo-50 border border-gray-100 hover:border-indigo-100 px-3 py-1.5 rounded-lg transition-all duration-200"
              >
                <span class="text-gray-700 group-hover:text-indigo-700 font-sans text-sm font-medium">
                  {tag}
                </span>
                <span class="bg-white group-hover:bg-indigo-100 text-gray-400 group-hover:text-indigo-500 text-[10px] font-bold px-1.5 py-0.5 rounded-md transition-colors shadow-sm">
                  {count}
                </span>
              </a>
            ))}
          </div>
        </div>
      ))}
    </div>
  ) : (
    <div class="py-20 text-center">
      <p class="text-gray-400 font-serif text-lg italic">No tags found yet. Start writing!</p>
    </div>
  )}
</BaseLayout>